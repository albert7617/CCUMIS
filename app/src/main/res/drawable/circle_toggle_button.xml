<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
  android:exitFadeDuration="@android:integer/config_shortAnimTime">

  <item
    android:state_pressed="true">
    <shape android:shape="oval">
      <solid android:color="@color/daySelected" />
      <size
        android:width="3dp"
        android:height="3dp" />
    </shape>
  </item>

  <item
    android:state_checked="true">
    <shape android:shape="oval">
      <solid android:color="@color/dayPressed" />
      <size
        android:width="3dp"
        android:height="3dp" />
    </shape>
  </item>

  <item
    android:state_checked="false">
    <shape android:shape="oval">
      <solid android:color="@color/dayDeselected" />
      <size
        android:width="3dp"
        android:height="3dp" />
    </shape>
  </item>

</selector>